<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:grid="http://schemas.android.com/apk/res-auto"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="60dp"
              android:weightSum="1">

    <ImageView
        android:id="@+id/thing_icon"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_marginLeft="4px"
        android:layout_marginRight="10px"
        android:layout_marginTop="4px"
        android:src="@drawable/dagarn_green" >
    </ImageView>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:rowCount="2"
        android:columnCount="2"
        android:layout_weight="14.71"
        android:rowOrderPreserved="true"
        android:columnOrderPreserved="true"
        android:useDefaultMargins="false">

        <TextView
            android:id="@+id/thing_name"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="Dagarn"
            android:textSize="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_row="0"
            android:layout_column="0"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="$199"
            android:id="@+id/thing_price"
            android:layout_gravity="right"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_row="0"
            android:layout_column="1"
            android:gravity="right"
            android:layout_marginRight="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="It&apos;s a couch"
            android:id="@+id/thing_description"
            android:layout_row="1"
            android:layout_column="0"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="23.m"
            android:id="@+id/thing_distance"
            android:layout_gravity="right"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_marginRight="10dp"/>
   </GridLayout>

</LinearLayout>